<tr id="company_<%= company.id %>">
  <td><%= company.name %></td>
  <td><%= link_to 'Show', company, class:"btn btn-info" %></td>
  <td><%= link_to 'Edit', edit_company_path(company), data: {remote: true}, class:"btn btn-success" %></td>
  <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?', remote: true }, class:"btn btn-danger" %></td>
</tr>
